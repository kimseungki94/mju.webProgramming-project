.form-group
  label(for="title") 주문자명
  input.form-control(type="text", name="title", placeholder="What's your question?", value=question.title)
.form-group
  label(for="local") 주문장소
  input.form-control(type="text", name="local", placeholder="What's your local?", value=question.local)
.form-group
  label(for="start") 시작시간
  input.form-control(type="text", name="start", placeholder="When start?", value=question.start)
.form-group
  label(for="end") 종료시간
  input.form-control(type="text", name="end", placeholder="When end?", value=question.end)
.form-group
  label(for="question") 상세설명
  textarea.form-control(name="content", rows="5")= question.content
.form-group
  label(for="kind") 음식종류
  input.form-control(type="text", name="kind", placeholder="What kind?", value=question.kind)
